# =============================================================================
# ENVIRONMENT VARIABLES FOR FRONTEND BIG DATA PROJECT
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# =============================================================================
# API KEYS
# =============================================================================
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here

# =============================================================================
# KAFKA CONFIGURATION
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=weather-data
KAFKA_BATCH_SIZE=100

# =============================================================================
# CASSANDRA CONFIGURATION
# =============================================================================
CASSANDRA_HOSTS=127.0.0.1
CASSANDRA_PORT=9042
CASSANDRA_KEYSPACE=weather_monitoring
CASSANDRA_USERNAME=
CASSANDRA_PASSWORD=

# =============================================================================
# HDFS CONFIGURATION
# =============================================================================
HDFS_NAMENODE=hdfs://namenode:9000
HDFS_WEBHDFS_URL=http://localhost:9870
HDFS_BASE_PATH=/user/airflow/weather_data
INFERENCE_POLL_INTERVAL=2

# =============================================================================
# SPARK CONFIGURATION
# =============================================================================
SPARK_MASTER=spark://spark-spark-1:7077

# =============================================================================
# AIRFLOW CONFIGURATION
# =============================================================================
AIRFLOW_BASE_URL=http://localhost:8090
AIRFLOW_USERNAME=admin
AIRFLOW_PASSWORD=admin

# =============================================================================
# PRODUCER API CONFIGURATION
# =============================================================================
PRODUCER_API_URL=http://localhost:8000
